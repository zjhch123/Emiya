#!/usr/bin/env node

const commander = require('commander');
const util = require('../lib/util');


commander
  .description('init a project')
  .version(require('../package').version)
  .option('-n, --node <projectName>', 'Create Node Project')
  .option('-w, --web <projectName>', 'Create Webapp Project')
  .parse(process.argv)
  
if (commander.node) {
  // 如果是Node的话
  
  const projectName = commander.node
  util.initNode(projectName, 1)
} else if (commander.web) {
  // 如果是web的话

  const projectName = commander.web
  util.initWeb(projectName, 0)
} else {
  // 参数有问题
  
  commander.outputHelp()
}